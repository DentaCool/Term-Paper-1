#!import PlayerPointsLabel ui/Labels/PlayerPointsLabel
#!import BasePlayer core/Players/BasePlayer
#:import MenuButton ui.buttons

<WinnerNameTextInput@TextInput>:
    multiline: False
    size_hint: .5, .3
    font_size: 20


<GameOverWidget@BoxLayout>:
    winner_name: winner_name
    orientation: "vertical"

    Label:
        pos_hint: {'center_x':.5, 'center_y':.8  }
        size_hint: .4, .3
        text: root.winner

    WinnerNameTextInput:
        id: winner_name
        hint_text: 'Введіть своє ім\'я'
        pos_hint: {'center_x':.5, 'center_y':.5}

    MenuButton:
        size_hint: .5, .5
        pos_hint: {'center_x':.5, 'center_y':.1}
        text: "Завершити"
        on_release:
            app.root.current_screen.children[0].save_result(winner_name.text)
            root.parent.parent.parent.dismiss()
            app.root.prev_screen()


<GameWidget@FloatLayout>:
    id: "game"
